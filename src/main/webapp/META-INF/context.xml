<?xml version="1.0" encoding="UTF-8"?>
<Context docBase="/bacasable"
         path="bacasable"
         reloadable="false">
    <Resource name="jdbc/bacasable"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/bacasable"
              username="postgres"
              password="postgres"
              minIdle="5"
              maxTotal="20"
              maxIdle="10"
              maxWaitMillis="-1"
              defaultAutoCommit="true"
              validationQuery="select '1'"/>
</Context>